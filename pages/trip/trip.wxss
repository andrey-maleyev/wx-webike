/* pages/trip/trip.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  font-family: Ariel;
} 

.happy {
  padding-top: 30px;
  padding-right: 20px;
  padding-bottom: 50px;
  padding-left: 20px;
  display: flex;
  font-size: 70rpx;
  font-weight: bold;
}

.time {
  display: flex;
  font-size: 60rpx;
  font-weight: light;
  margin: 0;
  padding-bottom: 10px;
  color: black;
}
.distance {
  display: flex;
  font-size: 60rpx;
  font-weight: light;
  margin: 0;
  padding-bottom: 10px;
  color: black;
}
.cost {
  display: flex;
  font-size: 60rpx;
  font-weight: light;
  margin: 0;
  color: black;
}

.btn-gradient {
  color: :black(245, 150, 150);
  padding: 8px 15px;
  border-radius: 10% / 50%;
  font-weight: light;
  background: linear-gradient(#167FFB, #0F60C4);
  transition: background 0.3s ease;
  border: 1px solid #0F60C4;
}

.btn-gradient:hover {
  background: linear-gradient(green);
  color:whitesmoke;
  font-weight: light;
}

.btn-gradient {
  border: 1px solid rgba(0,0,0,0.2);
  background: black;
  width: 100vw;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  bottom: 0rpx;
  margin: 0 auto;
  box-shadow: 3rpx 3rpx 5rpx grey(0,0,0,0.8);
}
.btn-gradient  {
  font-size: 100rpx;
  font-weight: light;
}

.button_slide {
  color: lightgray;
  border: 5px black;
  border-radius: 0px;
  padding: 18px 36px;
  display: flex;
  font-family: Ariel bold;
  font-size: 50rpx;
  letter-spacing: 1px;
  cursor: pointer;
  background-color: rgba(0,0,0,0.85);
  box-shadow: inset 400px 0 0 0 white;
  -webkit-transition: ease-out 0.4s;
  -moz-transition: ease-out 0.4s;
  transition: ease-out 0.4s;
  justify-content: center;
}

.button_slide:hover {
  box-shadow: inset 0 0 0 0 white;
}